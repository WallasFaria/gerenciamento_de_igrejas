<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", membros_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_membro_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.novo_telefone", :default => "Novo Telefone")}", novo_telefone_membro_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.novo_telefone", :default => "Novo")%>  Telefone</h2>
    <div class="inner">

			<%= form_for @telefone, :as => :telefone, :url => {:action => :add_telefone }, :method => :post, :html => { :class => :form } do |f| %>
			<div class="group">
	      	  <%= f.label :numero, t("activerecord.attributes.membro.numero", :default => "NÃºmero"), :class => :label %>
    		<%= f.text_field :numero, :OnKeyUp => "mascara_telefone(this)", :maxlength => 14, :class => 'text_field' %>
    
    		<br><span class="description">DDD + Tel</span>
			</div>
			<div class="group navform wat-cf">
			  <button class="button" type="submit">
			    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Salvar")}") %> <%= t("web-app-theme.save", :default => "Save") %>
			  </button>
		    <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
			<%= link_to t("web-app-theme.cancel", :default => "Cancel"),membro_path(params[:id]), :class => "text_button_padding link_button" %>
		  </div>
			<% end %>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>