<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "List", filial_membros_path(@filial)  %></li>
      <li><%= link_to "New", new_filial_membro_path(@filial) %></li>
      <li class="active"><%= link_to "Novo Telefone", novo_telefone_filial_membro_path(@filial) %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title">Novo Telefone</h2>
    <div class="inner">
			<%= form_for @telefone, :as => :telefone, :url => {:action => :add_telefone }, :method => :post, :html => { :class => :form } do |f| %>
        <div class="group">
          <%= f.label :numero, "NÃºmero", :class => :label %>
          <%= f.text_field :numero, :OnKeyUp => "mascara_telefone(this)", :maxlength => 14, :class => 'text_field' %>
          <br><span class="description">DDD + Tel</span>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "Salvar") %> Save
          </button>
          <span class="text_button_padding"> or </span>
          <%= link_to "Cancelar", filial_membro_path(@filial, @membro), :class => "text_button_padding link_button" %>
        </div>
			<% end %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>