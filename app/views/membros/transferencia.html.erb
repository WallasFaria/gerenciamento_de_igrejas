<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", membros_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_membro_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.novo_telefone", :default => "Novo Telefone")}", novo_telefone_membro_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.novo_telefone", :default => "Novo")%>  Telefone</h2>
    <div class="inner">
      <%= form_for @transferencia, :as => :transferencia, :url => {:action => :transferir },
                   :method => :post, :html => { :class => :form } do |f| %>
        <div class="group">
          <%= f.label :filial_destino, 'Filial Destino', :class => :label %>
          <%= f.select :filial_destino_id, Filial.all.map{|f| [f.bairro, f.id]}, :class => 'select' %>
        </div>

        <div class="group" id='right'>
          <%= f.label :data, t("activerecord.attributes.transferencia.data", :default => "Data da transferencia"), :class => :label %>
          <%= f.text_field :data, :OnKeyUp => "mascara_data(this)", :maxlength => 10, :class => 'text_field' %>
          <br><span class="description">Ex: dd/mm/aaaa</span>
        </div>

        <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Concluir") %>
        </button>
        <span class="text_button_padding"><%= t("web-app-theme.or", :default => "ou") %></span>
      <%= link_to t("web-app-theme.cancel", :default => "Cancelar"),membro_path(params[:id]), :class => "text_button_padding link_button" %>
      </div>

      <% end %>

    </div>
  </div>
</div>
 