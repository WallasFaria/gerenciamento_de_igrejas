<h1>Gerenciamento de Igrejas</h1>
<div class="block" id="block-login">
  <h2>Login</h2>
    <div class="content login">
    <% flash.each do |name, msg| %>
  	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	  <%= form_tag sessions_path, :class => 'form login' do %>
	    <div class="group wat-cf">
		    <div class="left">
		      <%= label_tag :email, 'Email', :class => 'label right' %>
		    </div>
		    <div class="right">
	          <%= text_field_tag :email, params[:email], :class => :text_field %>
			</div>
		</div>
		<div class="group wat-cf">
		  <div class="left">
		    <%= label_tag :password, 'Password', :class => 'label right' %>
		  </div>
		  <div class="right">
		    <%= password_field_tag :password, '', :class => :text_field %>
		  </div>
		</div>
		<div class="group navform wat-cf">
          <div class="right">
            <button class="button" type="submit">
              <img src="images/icons/key.png" alt="Save" /> Login
            </button>
          </div>
        </div>
	 <% end %>
  </div>
</div>