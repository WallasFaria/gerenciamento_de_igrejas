<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", membro_nomeacoes_path(params[:id])  %></li>
      <li><%= link_to "New", new_membro_nomeacao_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Membros</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.nomeacao.nome", :default => t("activerecord.labels.nome",  :default => "Nome")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @nomeacoes.each do |nomeacao| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= nomeacao.id %>
          </td>
          <td>
            <%= link_to nomeacao.ministerio.nome, "nomeacoes/#{nomeacao.id.to_s}" %>
          </td>
          <td>
            <%= nomeacao.created_at %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @nomeacoes  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
