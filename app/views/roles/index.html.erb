<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", roles_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_role_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Roles</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.role.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @roles.each do |role| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= role.id %>
          </td>
                    <td>
            <%= link_to role.nome, role_path(role) %>
          </td>
                    <td>
            <%= role.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", role_path(role) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_role_path(role) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", role_path(role), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @roles  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
